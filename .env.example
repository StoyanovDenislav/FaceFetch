# Camera Streamer Configuration
# Copy this file to .env and customize as needed

# Authentication token for camera stream access
# Leave empty to auto-generate on first run
CAMERA_STREAM_TOKEN=

# Require authentication for camera streams
# Set to 'false' to disable authentication (NOT RECOMMENDED for production)
CAMERA_STREAM_AUTH=true

# Custom URL for camera feed (e.g., https://yourdomain.com:8080 or http://192.168.1.100:8080)
# Leave empty to auto-detect local IP
CAMERA_STREAM_URL=

# Force using the custom URL instead of auto-detecting
# Set to 'true' to use CAMERA_STREAM_URL, 'false' to auto-detect
CAMERA_STREAM_FORCE_URL=false
